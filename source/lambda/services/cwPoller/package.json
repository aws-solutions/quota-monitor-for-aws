{
  "name": "cw-poller",
  "version": "1.0.0",
  "description": "microservice to poll for utilization metrics",
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com/solutions"
  },
  "license": "Apache-2.0",
  "main": "./index.js",
  "scripts": {
    "pretest": "npm ci",
    "test": "npx jest",
    "build:clean": "rm -rf ./node_modules && rm -rf ./dist",
    "build:ts": "npx tsc --project ./tsconfig.json",
    "postinstall": "npm run build:ts",
    "build:copy": "cp -r ./node_modules ./dist/services/cwPoller",
    "build:zip": "cd ./dist/services/cwPoller && zip -rq cw-poller.zip . && mv cw-poller.zip ../../",
    "build:all": "npm run build:clean && npm ci && npm prune --production && npm run build:copy && npm run build:zip"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.350.0",
    "@aws-sdk/client-cloudwatch-events": "^3.350.0",
    "@aws-sdk/client-service-quotas": "^3.350.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^16.18.33",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "jestSonar": {
    "reportPath": "coverage"
  }
}
